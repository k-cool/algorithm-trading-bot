{
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "baseUrl": ".",
  "paths": { "@/*": ["src/*"] },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
