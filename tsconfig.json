{
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "baseUrl": ".",
  "paths": { "@/*": ["src/*"] },
  "files": ["src/types/log.d.ts"],
  "include": ["src", "/src/**/*.ts", "**/src/**/*.ts", "/src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
